<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_hinhbaihat_seachsong"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/tv_tenbaihat_searchsong"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Ten Bai Hat"
        android:layout_toRightOf="@+id/iv_hinhbaihat_seachsong"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_tencasi_searchsong"
        android:textSize="15sp"
        android:textColor="#4e4c4c"
        android:text="Ten Ca Si"
        android:layout_toRightOf="@+id/iv_hinhbaihat_seachsong"
        android:layout_below="@id/tv_tenbaihat_searchsong"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="15dp"
        android:id="@+id/iv_luotthich_searchsong"
        android:src="@drawable/iconlove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>