<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView

        android:layout_margin="8dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_background_playlist"
        android:layout_width="match_parent"
        android:layout_height="110dp" />

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>
    
    <ImageView
        android:id="@+id/iv_playlist"
        android:scaleType="fitXY"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/iv_background_playlist"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:textSize="13sp"
        android:id="@+id/tv_title_playlist"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_alignBottom="@+id/iv_playlist"
        android:layout_toRightOf="@+id/iv_playlist"
        android:text="Ten Playlist"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>