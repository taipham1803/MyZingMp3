<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_playlist"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#000000"
        android:text="Nhip dieu cam xuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_below="@+id/tv_title_playlist"
        android:id="@+id/lv_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <TextView
        android:textColor="#030303"
        android:textSize="20sp"
        android:text="View More Playlist"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lv_playlist"
        android:id="@+id/tv_viewmoreplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>