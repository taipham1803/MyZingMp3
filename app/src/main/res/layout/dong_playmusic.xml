<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/custom_background_playmusic"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_margin="13dp"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:text="1"
            android:id="@+id/tv_song_index_playmusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title_song_playmusic"
            android:textSize="20sp"
            android:text="Ten Bai Hat"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/tv_song_index_playmusic"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_name_singer_playmusic"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/tv_song_index_playmusic"
            android:layout_below="@+id/tv_title_song_playmusic"
            android:text="Ten Ca Si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/iconlove"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_soluotthich"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>